<%- include('header') %>

    <h2>
        Gerenciamento de categorias -
        <a href="/admin/categorias/nova">Nova categoria</a>
    </h2>
    <div>
        <ul>
        <% categorias.forEach(categoria => { %>
            <li class="list-item">
                <%= categoria.categoria %> |
                <a href="/admin/categorias/atualizar/<%= categoria.id %>">Editar</a> |
                <a href="/admin/categorias/delete/<%= categoria.id %>">Excluir</a>
            </li>
        <% }) %>
        </ul>
    </div>

<%- include('footer') %>
